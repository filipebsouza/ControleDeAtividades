<div id="ModalExclusao" class="modal hide fade">
    @Html.Hidden("id")
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            &times;</button>
        <h3>
            Excluir</h3>
    </div>
    <div class="modal-body">
        <p>
            Tem certeza que deseja excluir esse registro?</p>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-danger" onclick="confirmarExclusao();">Confirmar exclusão</a>
        <a href="#" class="btn btn-inverse" data-dismiss="modal">Cancelar</a>
    </div>
</div>
@Scripts.Render("~/Scripts/Views/Shared/ModalExclusao.js")