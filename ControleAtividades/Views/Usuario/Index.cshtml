@model IEnumerable<Domain.Model.ca_usuario>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout_MenuLateral.cshtml";
}
<h2>
    Usuários</h2>
<p>
    @Html.ActionLink("Novo", "Incluir", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.ActionLink("Alterar", "Alterar", new { id = item.id }, new { @class = "btn btn-mini btn-success" })
                @Html.ActionLink("Deletar", "Deletar", new { id = item.id }, new { @class = "btn btn-mini btn-danger" })
            </td>
        </tr>
    }
</table>
